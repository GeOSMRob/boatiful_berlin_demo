<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="oval">
            <solid
                android:color="@color/LightLightBlue"/>
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/LightBlue"/>
</shape>
    </item>
    <item>
        <shape
            android:shape="oval">
            <solid
                android:color="@color/Black"/>

            <size
                android:width="15dp"
                android:height="15dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/Black"/>
        </shape>

    </item>
</layer-list>