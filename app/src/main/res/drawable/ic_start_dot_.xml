<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="oval">
            <solid
                android:color="@color/Transparent"/>
            <padding
                android:bottom="7.5dp"
                android:left="7.5dp"
                android:right="7.5dp"
                android:top="7.5dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/Black"/>
</shape>
    </item>
    <item>
        <shape
            android:shape="oval">
            <solid
                android:color="@color/Black"/>

            <size
                android:width="10dp"
                android:height="10dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/Black"/>
        </shape>

    </item>
</layer-list>